{
  "manifest_version": 3,
  "name": "1 Click Skool Group Count",
  "version": "0.1.0",
  "description": "Easily view number of groups under each category on Skool.",
  "permissions": ["activeTab"],
  "action": {},
  "content_scripts": [
    {
      "matches": ["https://www.skool.com/discovery"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
